{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_release",
            "type": "shell",
            "command": "./makeAll.sh",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_debug",
            "type": "shell",
            "command": "./makeAll.sh",
            "args": [
                "--debug"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "test_release",
            "type": "shell",
            "command": "${workspaceFolder}/build/release/test/MY_PROJECT_NAME_test",
            "dependsOn": [
                "build_release"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "test"
        },
        {
            "label": "test_debug",
            "type": "shell",
            "command": "${workspaceFolder}/build/debug/test/MY_PROJECT_NAME_test",
            "dependsOn": [
                "build_debug"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "test"
        }
    ]
}